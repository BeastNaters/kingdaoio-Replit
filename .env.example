# ==============================================================================
# KingDAO Treasury Dashboard - Environment Variables Template
# ==============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env files to version control!
# ==============================================================================

# ==============================================================================
# DATABASE (Required)
# ==============================================================================
# PostgreSQL connection string from your database provider
# Get this from: Replit Database, Neon, Supabase, or any PostgreSQL provider
DATABASE_URL=postgresql://user:password@host:port/database


# ==============================================================================
# ETHEREUM RPC (Required for NFT Verification & Wallet Connection)
# ==============================================================================
# Server-side: Ethereum mainnet RPC URL for NFT ownership verification
# Accepts either ETHEREUM_RPC_URL or NEXT_PUBLIC_RPC_URL (as fallback)
# Get free tier from: Infura, Alchemy, or use public endpoints
ETHEREUM_RPC_URL=https://eth.llamarpc.com
# OR use this (server will fall back to NEXT_PUBLIC_RPC_URL if ETHEREUM_RPC_URL not set):
NEXT_PUBLIC_RPC_URL=https://eth.llamarpc.com

# Client-side: Frontend wallet connection (must be prefixed with VITE_)
VITE_ETHEREUM_RPC_URL=https://eth.llamarpc.com


# ==============================================================================
# DUNE ANALYTICS (Optional - Returns Mock Data if Not Configured)
# ==============================================================================
# Dune Analytics API key for blockchain data queries
# Get from: https://dune.com/settings/api
DUNE_API_KEY=

# Dune Query IDs - Create custom queries on Dune Analytics
# Token Prices Query - Should return: symbol, name, price
DUNE_TOKEN_PRICES_QUERY_ID=

# NFT Floor Prices Query - Should return: collection, floor_price
DUNE_NFT_FLOOR_PRICES_QUERY_ID=

# Wallet Balances Query - Should return: address, tokens[]
DUNE_WALLET_BALANCES_QUERY_ID=


# ==============================================================================
# GNOSIS SAFE (Optional - Returns Empty Array if Not Configured)
# ==============================================================================
# Your multi-sig treasury wallet address on Ethereum mainnet
SAFE_ADDRESS=

# Safe Transaction Service URL (defaults to mainnet if not set)
SAFE_TX_SERVICE_URL=https://safe-transaction-mainnet.safe.global


# ==============================================================================
# GOOGLE SHEETS (Optional - Uses Replit Connectors for OAuth)
# ==============================================================================
# Google Spreadsheet ID containing manual treasury entries
# Get from spreadsheet URL: https://docs.google.com/spreadsheets/d/{SPREADSHEET_ID}/edit
TREASURY_SPREADSHEET_ID=

# Replit Connectors (automatically set by Replit when you connect Google Sheets)
REPLIT_CONNECTORS_HOSTNAME=
REPL_IDENTITY=
WEB_REPL_RENEWAL=


# ==============================================================================
# SUPABASE (Required for Historical Data & Caching)
# ==============================================================================
# Supabase project credentials for treasury snapshot persistence
# Get from: https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here


# ==============================================================================
# MORALIS (Required for NFT Holdings)
# ==============================================================================
# Moralis API key for fetching NFT data and floor prices
# Get from: https://admin.moralis.io/settings/api-keys
MORALIS_API_KEY=


# ==============================================================================
# SNAPSHOT (Optional - Defaults to 'kongsdao.eth')
# ==============================================================================
# Snapshot governance space identifier
SNAPSHOT_SPACE=kongsdao.eth


# ==============================================================================
# DISCORD (Optional - Uses Replit Connectors for OAuth)
# ==============================================================================
# Discord bot credentials managed through Replit Connectors
# After connecting Discord integration in Replit, these are auto-populated:
# REPLIT_CONNECTORS_HOSTNAME, REPL_IDENTITY, WEB_REPL_RENEWAL (same as above)


# ==============================================================================
# ADMIN AUTHENTICATION (Optional - Required for Admin Panel Access)
# ==============================================================================
# Comma-separated list of Ethereum addresses (lowercase) that can access admin panel
# These addresses can manage NFT assets, wallet balances, and export data
# Admin verification is done server-side via wallet signature authentication
# Example: ADMIN_ADDRESSES=0xabc...,0xdef...
ADMIN_ADDRESSES=


# ==============================================================================
# SESSION & SECURITY (Optional)
# ==============================================================================
# Secret key for session encryption - Generate a random string
SESSION_SECRET=your-random-secret-key-here

# Treasury snapshot update interval in milliseconds 
# Default: 900000 (15 minutes)
# Example: 3600000 = 1 hour
SNAPSHOT_INTERVAL=900000


# ==============================================================================
# SERVER (Optional)
# ==============================================================================
# Port for Express server (defaults to 5000)
PORT=5000

# Node environment
NODE_ENV=development
